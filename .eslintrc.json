{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "react/jsx-filename-extension": ["off"],
        "react/state-in-constructor": ["error", "never"],
        "react/prefer-stateless-function": ["off"],
        "jest/expect-expect": [
            "error",
            { "assertFunctionNames": ["render"] }
        ]
    }
}
